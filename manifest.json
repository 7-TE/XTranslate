{
  "name": "XTranslate",
  "description": "__MSG_description__",
  "version": "2.3.1",
  "manifest_version": 2,
  "default_locale": "en",
  "minimum_chrome_version": "53",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "options.html#popup",
    "default_icon": {
      "19": "icons/48.png",
      "38": "icons/48.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "run_at":"document_end",
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "css": [
        "page.css"
      ],
      "js": [
        "injector.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "*://translate.googleapis.com/",
    "*://api.browser.yandex.ru/",
    "*://tts.voicetech.yandex.net/",
    "*://www.bing.com/translator/"
  ]
}