{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs"  : true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "traceResolution": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}