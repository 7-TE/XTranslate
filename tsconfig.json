{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "jsx": "react",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false, // fixme
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}